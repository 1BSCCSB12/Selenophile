#include <stdio.h>

int main()
{
    printf("Using while loop:\n");

    int i = 1;   // Step 1: Initialize counter variable

    // Step 2: Loop to print numbers 1 to 10
    while (i <= 10)
    {
        printf("%d ", i);
        i++;    // Step 3: Increment counter
    }

    printf("\n");
    return 0;
}
